{
  "manifest_version": 3,
  "name": "LeetCode AI Assistant",
  "version": "1.0",
  "description": "Get AI-powered explanations, solutions, and thinking approaches for LeetCode problems",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://leetcode.com/*",
    "https://api.groq.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://leetcode.com/problems/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "web_accessible_resources": [
  {
    "resources": [
      "modal.css",
      "fonts/Montserrat-Regular.woff2",
      "fonts/Montserrat-Bold.woff2",
      "fonts/Montserrat-ThinItalic.woff2"
    ],
    "matches": ["https://leetcode.com/*"]
  }
]
}
